<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background_shape">

    <TextView
        android:id="@+id/widget_space_selector"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Tap to select space"
        android:textSize="14sp"
        android:textColor="@color/widget_text_primary"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/widget_item_shape"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/widget_note_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Tap to write note..."
        android:gravity="top|start"
        android:padding="8dp"
        android:textSize="14sp"
        android:textColor="@color/widget_text_secondary"
        android:background="@drawable/widget_item_shape" />

</LinearLayout>
